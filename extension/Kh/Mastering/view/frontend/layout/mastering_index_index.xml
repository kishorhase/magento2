<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Kh\Mastering\Block\Hello" name="mastering_hello" template="Kh_Mastering::hello.phtml">
                <arguments>
                    <argument name="label" xsi:type="string">My Layout</argument>
                </arguments>
            </block>
            <block class="Magento\Cms\Block\Block" name="block_contact_us_info">
                <arguments>
                    <argument name="block_id" xsi:type="string">contact-us-info</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceBlock name="form.subscribe" remove="true"/>
    </body>
</page>
